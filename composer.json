{
	"name": "fromholdio/silverstripe-fulltext-filters",
	"type": "silverstripe-vendormodule",
	"description": "This module adds three fulltext SearchFilters to your SilverStripe project.",
	"license": "BSD-3-Clause",
	"keywords": ["silverstripe", "fulltext", "search", "search filters", "innodb", "mysql", "mariadb"],
	"homepage": "https://github.com/fromholdio/silverstripe-fulltext-filters",
	"support": {
		"issues": "https://github.com/fromholdio/silverstripe-fulltext-filters/issues"
	},
	"authors": [{
		"name": "Luke Fromhold",
		"homepage": "https://fromhold.io"
	}],
    "require": {
        "php": ">=5.6",
        "silverstripe/vendor-plugin": "^1.0",
        "silverstripe/framework": "^4.0"
    },
    "suggest": {
        "fromholdio/silverstripe-fulltext-innodb": "^1.0"
    },
	"autoload": {
		"psr-4": {
			"Fromholdio\\FullTextFilters\\": "src/"
		}
	},
	"prefer-stable": true,
	"minimum-stability": "dev"
}
